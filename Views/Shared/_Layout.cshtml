@{
    var isLogin = Session["user"];
    QuanLyDuAn.Models.users user;
    if (isLogin != null)
    {
        user = isLogin as QuanLyDuAn.Models.users;
    }
    else
    {
        user = new QuanLyDuAn.Models.users();
    }
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>ADMIN - ABC GROUP</title>
    <link href="~/Content/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js"
            crossorigin="anonymous"></script>
    <link rel="icon"
          type="image/x-icon"
          href="https://upload.wikimedia.org/wikipedia/commons/1/19/Logo-ute_%282%29.png" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css"
          rel="stylesheet" />
    @RenderSection("css", required: false)
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="/">ABC GROUP</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0"
                id="sidebarToggle"
                href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0"></form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-auto float-right me-lg-4">
            <li class="nav-item dropdown" style="display: flex">
                @if (isLogin != null)
                {
                    <p class="nav-link">@user.user_name</p>
                }

                <a class="nav-link dropdown-toggle"
                   id="navbarDropdown"
                   href="#"
                   role="button"
                   data-bs-toggle="dropdown"
                   aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end"
                    aria-labelledby="navbarDropdown">
                    @if (isLogin != null)
                    {
                        <li>
                            @Html.ActionLink("Logout", "Index", "Logout", null, new { @class = "dropdown-item" })
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Login", "Index", "Login", null, new { @class = "dropdown-item" })
                        </li>
                    }

                </ul>
            </li>
        </ul>
    </nav>
    @if (isLogin != null)
    {
        <div id="layoutSidenav">

            @if (isLogin != null)
            {
                <div id="layoutSidenav_nav">
                    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                        <div class="sb-sidenav-menu">
                            <div class="nav">
                                <div class="sb-sidenav-menu-heading">core</div>
                                <a class="nav-link" href="@Url.Action("Index","Home")">
                                    <div class="sb-nav-link-icon">
                                        <i class="fas fa-tachometer-alt"></i>
                                    </div>
                                    Dashboard
                                </a>
                                <a class="nav-link" href="@Url.Action("Index","Project")">
                                    <div class="sb-nav-link-icon">
                                        <i class="fas fa-sharp fa-solid fa-table-list"></i>
                                    </div>
                                    Projects
                                </a>
                                <a class="nav-link" href="@Url.Action("Index","User")">
                                    <div class="sb-nav-link-icon">
                                        <i class="fas fa-sharp fa-solid fa-user"></i>
                                    </div>
                                    Users
                                </a>
                                <a class="nav-link" href="@Url.Action("Index","Task")">
                                    <div class="sb-nav-link-icon">
                                        <i class="fa fa-sharp fa-solid fa-bars"></i>
                                    </div>
                                    Tasks
                                </a>
                                <a class="nav-link" href="@Url.Action("Index","Assignment")">
                                    <div class="sb-nav-link-icon">
                                        <i class="fa fa-sharp fa-solid fa-chart-simple"></i>
                                    </div>
                                    Assignments
                                </a>
                                <a class="nav-link" href="@Url.Action("Index","ProjectManager")">
                                    <div class="sb-nav-link-icon">
                                        <i class="fa fa-sharp fa-solid fa-chart-column"></i>
                                    </div>
                                    Project Manager
                                </a>

                            </div>
                        </div>
                        <div class="sb-sidenav-footer">
                            <div class="small">Logged in as:</div>
                            ABC GROUP
                        </div>
                    </nav>
                </div>



                <div id="layoutSidenav_content">
                    <main>
                        @RenderBody()
                    </main>
                    <footer class="py-4 mt-auto" style="background-color: #808080;">
                        <div class="container-fluid px-4">
                            <div class="text-center">
                                Copyright &copy; ABC GROUP
                            </div>
                        </div>
                    </footer>
                </div>
            }
            else
            {

            }


        </div>
    }
    else
    {
        <main id="layout_nologin">
            @RenderBody()
        </main>
        <footer class="py-4 mt-auto" style="background-color: #808080;">
            <div class="container-fluid px-4">
                <div class="text-center">
                    Copyright &copy; ABC GROUP
                </div>
            </div>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest"
            crossorigin="anonymous"></script>
</body>
</html>
