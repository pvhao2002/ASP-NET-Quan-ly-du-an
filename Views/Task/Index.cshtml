@model QuanLyDuAn.Models.TaskViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link rel="stylesheet" href="~/Content/list.index.css" type="text/css">
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
        <li class="breadcrumb-item active">Task</li>
    </ol>
    <hr />
    <div class="d-flex">
        @Html.ActionLink("Add", "Add", "Task", new { @class = "btnAdd" })
    </div>
    <table border="1">
        <tr>
            <th>Task ID</th>
            <th>Task name</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Status</th>
            <th>Project Name</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model.listTask)
        {
            <tr>
                <td>@item.task_id</td>
                <td>@item.task_name</td>
                <td>@item.start_date</td>
                <td>@item.end_date</td>
                <td>@item.status</td>
                <td>@Model.getProjectName(item.project_id)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Task", new { id = item.task_id }, null) |
                    @Html.ActionLink("Delete", "Delete", "Task", new { id = item.task_id }, new { onclick = "return confirm('Are you sure you want to delete this task?');" })
                </td>
            </tr>
        }
    </table>
</div>

